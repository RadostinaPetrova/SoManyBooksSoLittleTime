@using SoManyBooksSoLittleTime.Web.ViewModels.Books
@model EditBookInputModel

@{
    this.ViewData["Title"] = "Edit book";
    var authors = this.Model.Authors.Select(x => new SelectListItem(x.Value, x.Key));
}

<form method="post" class="col-md-6 offset-md-3">
    <h1 class="text-center text-dark">@this.ViewData["Title"]</h1>
    <input type="hidden" asp-for="Id"/>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Title" class="text-dark"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AuthorId" class="text-dark"></label>
        <select asp-for="AuthorId" class="form-control" asp-items="authors" ></select>
        <span asp-validation-for="AuthorId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="text-dark"></label>
        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Published" class="text-dark"></label>
        <input asp-for="Published" class="form-control" />
        <span asp-validation-for="Published" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rating" class="text-dark"></label>
        <input asp-for="Rating" class="form-control" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ISBN" class="text-dark"></label>
        <input asp-for="ISBN" class="form-control" />
        <span asp-validation-for="ISBN" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-success" value="Save changes"/>
</form>