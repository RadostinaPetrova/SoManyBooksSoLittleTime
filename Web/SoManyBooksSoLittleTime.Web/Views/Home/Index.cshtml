@using SoManyBooksSoLittleTime.Common
@model SoManyBooksSoLittleTime.Web.ViewModels.Home.IndexViewModel
@{
    this.ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to @GlobalConstants.SystemName!</h1>
    <div class="col-md-4 offset-md-4">
    <p>We have:</p>
    <ul class="list-group">
        <li class="list-group-item">Books: @Model.BooksCount</li>
        <li class="list-group-item">Authors: @Model.AuthorsCount</li>
        <li class="list-group-item">Genres: @Model.GenresCount</li>
        <li class="list-group-item">Images: @Model.ImagesCount</li>
    </ul>
    </div>
</div>
