@using SoManyBooksSoLittleTime.Web.ViewModels.SearchBooks
@model ListViewModel

@{
    ViewData["Title"] = "Search result";
}

<h1 class="text-dark">@this.ViewData["Title"]</h1>

<hr />
<div class="row">
    @foreach (var book in this.Model.Books)
    {
        <div class="media col-md-4">
            <img src="@book.ImageUrl" width="100" class="mr-3" img-responsive>
            <div class="media-body">
                <h5 class="mt-0"><a asp-controller="Books" asp-action="ById" asp-route-id="@book.Id">@book.Title</a></h5>
                <p class="text-dark">@book.AuthorName</p>
            </div>
        </div>
    }
</div>
<hr />
